{
  "app-id": "com.github.cadmiumcmyk.Flora",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "flora.sh",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=xdg-data",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "modules": [
    {
      "name": "flora",
      "buildsystem": "simple",
      "build-commands": [
        "install -D -p main.py /app/bin/main.py",
        "install -D -p database.py /app/bin/database.py",
        "install -D -p ui_components.py /app/bin/ui_components.py",
        "install -D -p views.py /app/bin/views.py",
        "install -D -p flora.sh /app/bin/flora.sh",
        "chmod +x /app/bin/flora.sh",
        
        "install -D -p com.github.cadmiumcmyk.Flora.desktop /app/share/applications/com.github.cadmiumcmyk.Flora.desktop",
        "install -D -p com.github.cadmiumcmyk.Flora.svg /app/share/icons/hicolor/128x128/apps/com.github.cadmiumcmyk.Flora.svg",
        "install -D -p com.github.cadmiumcmyk.Flora.metainfo.xml /app/share/metainfo/com.github.cadmiumcmyk.Flora.metainfo.xml"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
